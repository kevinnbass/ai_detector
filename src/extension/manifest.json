{
  "manifest_version": 3,
  "name": "AI Text Detector - Optimized",
  "version": "1.0.0",
  "description": "Efficient AI-generated text detection with <50MB memory usage",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*.social/*"
  ],
  
  "background": {
    "service_worker": "background/optimized_background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://*.social/*"
      ],
      "js": [
        "performance/memory_optimizer.js",
        "content/optimized_content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Text Detector",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "performance/*",
        "styles/*"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://*.social/*"
      ]
    }
  ],
  
  "minimum_chrome_version": "88",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}