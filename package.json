{
  "name": "ai-detector-extension",
  "version": "1.0.0",
  "description": "Chrome extension for AI text detection with comprehensive testing",
  "main": "extension/src/background/background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:extension": "jest --config=jest.extension.config.js",
    "test:api": "jest --config=jest.api.config.js",
    "test:performance": "node tests/performance/extension-benchmarks.js",
    "test:performance:full": "python tests/performance/run_performance_tests.py",
    "test:performance:quick": "python tests/performance/run_performance_tests.py --quick",
    "test:performance:js": "node tests/performance/extension-benchmarks.js",
    "test:performance:python": "python tests/performance/run_performance_tests.py --skip-js",
    "test:load": "python tests/performance/run_performance_tests.py --skip-js --skip-load=false",
    "performance:monitor": "python tests/performance/performance-monitor.py",
    "performance:baseline": "python tests/performance/run_performance_tests.py --output-dir test-results/baseline",
    "performance:compare": "python tests/performance/run_performance_tests.py --compare-baseline",
    "lint": "eslint extension/src/**/*.js tests/js/**/*.js",
    "lint:fix": "eslint extension/src/**/*.js tests/js/**/*.js --fix",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "dev": "npm run build:dev && npm run test:watch",
    "validate": "npm run lint && npm run test && npm run test:e2e",
    "validate:performance": "npm run validate && npm run test:performance:quick",
    "ci": "npm run lint && npm run test:coverage && npm run test:e2e && npm run test:performance:quick"
  },
  "keywords": ["ai", "detection", "chrome-extension", "gpt", "testing"],
  "author": "AI Detector Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@playwright/test": "^1.37.0",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.3",
    "eslint": "^8.45.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.1",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.6.1",
    "jest-environment-node": "^29.6.1",
    "jest-webextension-mock": "^3.8.9",
    "jsdom": "^22.1.0",
    "supertest": "^6.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/js/setup.js"],
    "collectCoverageFrom": [
      "extension/src/**/*.js",
      "!extension/src/**/*.test.js",
      "!extension/src/vendor/**"
    ],
    "coverageDirectory": "coverage/js",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js",
      "<rootDir>/extension/src/**/*.test.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/extension/src/$1"
    },
    "transform": {},
    "testTimeout": 10000
  }
}